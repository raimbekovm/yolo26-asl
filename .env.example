# ==================== Environment Configuration ====================
# Copy this file to .env and fill in your values

# Project
PROJECT_NAME=yolo26-asl
ENVIRONMENT=development  # development, staging, production

# Paths (optional, defaults work for most cases)
DATA_DIR=./data
WEIGHTS_DIR=./weights
OUTPUTS_DIR=./outputs

# Device
DEVICE=auto  # auto, cpu, cuda, mps

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# ==================== Experiment Tracking (Optional) ====================

# Weights & Biases
WANDB_API_KEY=
WANDB_PROJECT=yolo26-asl
WANDB_ENTITY=

# MLflow
MLFLOW_TRACKING_URI=
MLFLOW_EXPERIMENT_NAME=yolo26-asl

# ==================== HuggingFace (For deployment) ====================
HF_TOKEN=
HF_SPACE_NAME=

# ==================== Data Sources ====================
# Mendeley Data (SignAlphaSet)
# No API key needed - public dataset

# Kaggle (optional for additional datasets)
KAGGLE_USERNAME=
KAGGLE_KEY=
